---
import SectionTitle from './SectionTitle.astro';
import Button from './Button.astro';
import '../styles/Benefits.css';

// Import SVG icons
import AccessIcon from './icons/Access.astro';
import MaterialIcon from './icons/Material.astro';
import SubscriptionIcon from './icons/Subscription.astro';
import PriceIcon from './icons/Price.astro';
import SupportIcon from './icons/Support.astro';
import SecurityIcon from './icons/Security.astro';
import SelectBooksIcon from './icons/SelectBooks.astro';
import PaymentIcon from './icons/Payment.astro';
import InstantAccessIcon from './icons/InstantAccess.astro';

// Define benefits data
const benefits = [
	{
		icon: AccessIcon,
		title: 'Acceso inmediato',
		description: 'Recibe los libros al instante después del pago.',
	},
	{
		icon: MaterialIcon,
		title: 'Material completo',
		description:
			'Libros + Workbook + Audios + Videos + Software + Exámenes.',
	},
	{
		icon: SubscriptionIcon,
		title: 'Sin suscripción',
		description: 'Compra única, sin pagos recurrentes.',
	},
	{
		icon: PriceIcon,
		title: 'Precios accesibles',
		description: 'Packs completos por solo S/10.00.',
	},
	{
		icon: SupportIcon,
		title: 'Atención personalizada',
		description: 'Resolvemos dudas en WhatsApp y Telegram.',
	},
	{
		icon: SecurityIcon,
		title: 'Seguridad',
		description:
			'Pagos 100% seguros con Yape, Plin, Transferencias y PayPal.',
	},
];

// Define purchase steps
const purchaseSteps = [
	{
		number: '01',
		icon: SelectBooksIcon,
		title: 'Elige tu pack de libros',
		description:
			'Explora nuestros packs y selecciona el que más te interese.',
	},
	{
		number: '02',
		icon: PaymentIcon,
		title: 'Realiza el pago',
		description:
			'Paga con Yape, Plin, transferencia bancaria o PayPal. Envíanos el comprobante de pago por WhatsApp o Telegram.',
	},
	{
		number: '03',
		icon: InstantAccessIcon,
		title: 'Recibe tu material al instante',
		description:
			'Te enviamos acceso inmediato a los libros en Google Drive / OneDrive.',
	},
];

// Stats for customer satisfaction section
const stats = {
	customers: '5,000+',
	books: '10,000+',
	satisfaction: '98%',
};
---

<section
	class='py-12 md:py-16 bg-neutral-light relative overflow-hidden benefits-section'>
	<!-- Background pattern and decorative elements -->
	<div class='absolute inset-0 bg-pattern opacity-5'></div>
	<div class='decorative-shape shape-1'></div>
	<div class='decorative-shape shape-2'></div>

	<div class='container mx-auto px-4 relative z-10'>
		<div class='text-center mb-8 md:mb-12'>
			<SectionTitle>¿Por qué elegirnos?</SectionTitle>
			<p class='text-gray-600 mt-4 max-w-2xl mx-auto'>
				En FluentReads nos enfocamos en ofrecerte la mejor experiencia
				de aprendizaje con materiales de alta calidad y un servicio
				excepcional.
			</p>
		</div>

		<!-- Grid layout for tablets -->
		<div
			class='grid sm:grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 lg:gap-12'>
			<!-- Benefits Column -->
			<div
				class='bg-white rounded-xl shadow-lg p-5 sm:p-6 md:p-8 transform transition-all duration-500 hover:shadow-xl benefits-container'>
				<h3
					class='text-xl md:text-2xl font-bold text-primary-dark mb-4 md:mb-6 flex items-center'>
					<span
						class='bg-primary text-white p-2 rounded-full mr-3 benefit-icon-container'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 20 20'
							fill='currentColor'>
							<path
								fill-rule='evenodd'
								d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
								clip-rule='evenodd'></path>
						</svg>
					</span>
					Beneficios de comprar aquí
				</h3>

				<!-- Benefits cards -->
				<div
					class='grid grid-cols-1 xs:grid-cols-2 sm:grid-cols-2 gap-4 sm:gap-6'>
					{
						benefits.map((benefit) => (
							<div class='benefit-card transform transition-all duration-300 hover:-translate-y-2 hover:shadow-md p-4 sm:p-5 rounded-lg border border-neutral hover:border-primary-light'>
								<div class='text-primary h-10 w-10 sm:h-12 sm:w-12 mb-3 benefit-icon'>
									<benefit.icon />
								</div>
								<h4 class='font-bold text-primary-dark text-base sm:text-lg mb-2'>
									{benefit.title}
								</h4>
								<p class='text-gray-600 text-sm sm:text-base'>
									{benefit.description}
								</p>
							</div>
						))
					}
				</div>

				<!-- Special Offers -->
				<div
					class='mt-6 sm:mt-8 bg-gradient-to-r from-primary/15 to-secondary/15 p-4 sm:p-5 rounded-lg border-l-4 border-accent special-offer-banner'>
					<div
						class='flex flex-col sm:flex-row items-center sm:items-start'>
						<div
							class='text-accent h-12 w-12 sm:h-14 sm:w-14 mr-0 sm:mr-4 mb-3 sm:mb-0 animate-bounce-subtle'>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								viewBox='0 0 24 24'
								fill='currentColor'>
								<path
									d='M9.375 3a1.875 1.875 0 000 3.75h1.875v4.5H3.375A1.875 1.875 0 101.5 13.125V9.75c0-1.036.84-1.875 1.875-1.875h3.193A3.75 3.75 0 0112 5.625h1.875a3.75 3.75 0 013.75 3.75v1.875C19.5 11.25 18.75 12 17.625 12s-1.875-.75-1.875-1.875V9.75C15.75 9.125 15.28 8.625 14.625 8.625h-1.875v-1.5h1.875a1.875 1.875 0 100-3.75A1.875 1.875 0 0012 1.5h-1.875A1.875 1.875 0 007.875 3.75v0z'
								></path>
								<path
									d='M11.625 7.5h1.5v5.625c0 1.036-.84 1.875-1.875 1.875h-5.25a1.875 1.875 0 01-1.875-1.875V7.5h1.875c.621 0 1.125.504 1.125 1.125v3.75c0 .621.504 1.125 1.125 1.125h1.5a1.125 1.125 0 001.125-1.125v-3.75c0-.621.504-1.125 1.125-1.125z'
								></path>
							</svg>
						</div>
						<div class='text-center sm:text-left'>
							<h4
								class='font-bold text-primary-dark text-lg mb-1'>
								Ofertas especiales
							</h4>
							<p class='text-gray-600'>
								Obtén hasta un <span
									class='text-accent font-bold'
									>20% de descuento</span
								> en compras de más de 3 packs. ¡Aprovecha ahora!
							</p>
							<div class='mt-3'>
								<Button
									variant='accent'
									size='small'
									href='/ofertas'
									class='hover:shadow-md'>
									Ver ofertas
								</Button>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Purchase Steps Column -->
			<div class='flex flex-col'>
				<!-- Purchase Steps with improved visual flow and tablet responsiveness -->
				<div
					class='bg-white rounded-xl shadow-lg p-5 sm:p-6 md:p-8 mb-6 transform transition-all duration-500 hover:shadow-xl steps-container'>
					<h3
						class='text-xl md:text-2xl font-bold text-primary-dark mb-4 md:mb-6 flex items-center'>
						<span
							class='bg-secondary text-black p-2 rounded-full mr-3 step-icon-header'>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								class='h-6 w-6'
								viewBox='0 0 20 20'
								fill='currentColor'>
								<path
									d='M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z'
								></path>
							</svg>
						</span>
						Guía de compra en 3 pasos
					</h3>

					<!-- Purchase steps -->
					<div class='space-y-6 sm:space-y-8'>
						{
							purchaseSteps.map((step) => (
								<div class='step-container'>
									<div class='flex flex-col sm:flex-row items-center sm:items-start'>
										<div class='step-icon-container mb-3 sm:mb-0 flex-shrink-0'>
											<div class='step-number bg-primary text-white text-lg sm:text-xl font-bold rounded-full w-12 h-12 sm:w-14 sm:h-14 flex items-center justify-center shadow-md'>
												{step.number}
											</div>
											<div class='step-icon text-primary h-12 w-12 sm:h-14 sm:w-14 my-2 sm:my-3'>
												<step.icon />
											</div>
										</div>
										<div class='ml-0 sm:ml-6 text-center sm:text-left step-content'>
											<h4 class='font-bold text-primary-dark text-lg sm:text-xl mb-1 sm:mb-2'>
												{step.title}
											</h4>
											<p class='text-gray-600 text-sm sm:text-base'>
												{step.description}
											</p>
										</div>
									</div>
								</div>
							))
						}
					</div>

					<div class='mt-8 sm:mt-10 text-center cta-container'>
						<Button
							variant='primary'
							size='large'
							href='/catalogo'
							class='shadow-lg hover:shadow-xl transform transition-all duration-300 pulse-animation'>
							<span class='flex items-center'>
								<span>Comenzar ahora</span>
								<svg
									xmlns='http://www.w3.org/2000/svg'
									class='h-5 w-5 ml-2'
									viewBox='0 0 20 20'
									fill='currentColor'>
									<path
										fill-rule='evenodd'
										d='M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z'
										clip-rule='evenodd'></path>
								</svg>
							</span>
						</Button>
					</div>
				</div>

				<!-- Customer Stats -->
				<div
					class='bg-primary text-white rounded-xl shadow-lg p-5 sm:p-6 md:p-8 stats-container'>
					<h3
						class='text-lg sm:text-xl font-bold mb-4 sm:mb-5 flex items-center'>
						<span
							class='bg-white text-primary p-2 rounded-full mr-3 shine-effect'>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								class='h-5 w-5'
								viewBox='0 0 20 20'
								fill='currentColor'>
								<path
									d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z'
								></path>
							</svg>
						</span>
						Clientes satisfechos
					</h3>

					<!-- Improved grid for statistics -->
					<div class='grid grid-cols-3 gap-2 sm:gap-4 stats-grid'>
						<div class='text-center stat-item'>
							<div
								class='text-2xl sm:text-3xl md:text-4xl font-bold text-secondary mb-1 sm:mb-2 counter-animation'>
								{stats.customers}
							</div>
							<div class='text-xs sm:text-sm text-white/90'>
								Clientes
							</div>
						</div>
						<div class='text-center stat-item'>
							<div
								class='text-2xl sm:text-3xl md:text-4xl font-bold text-secondary mb-1 sm:mb-2 counter-animation'>
								{stats.books}
							</div>
							<div class='text-xs sm:text-sm text-white/90'>
								Libros vendidos
							</div>
						</div>
						<div class='text-center stat-item'>
							<div
								class='text-2xl sm:text-3xl md:text-4xl font-bold text-secondary mb-1 sm:mb-2 counter-animation'>
								{stats.satisfaction}
							</div>
							<div class='text-xs sm:text-sm text-white/90'>
								Satisfacción
							</div>
						</div>
					</div>

					<div
						class='mt-4 sm:mt-5 p-2 sm:p-3 bg-primary-dark rounded-lg text-xs sm:text-sm text-white/90 text-center trust-banner'>
						<p>
							Únete a miles de estudiantes y profesionales que
							confían en nosotros para su formación en inglés.
						</p>

						<div class='flex justify-center mt-2 sm:mt-3 space-x-1'>
							<span class='text-yellow-400'>★</span>
							<span class='text-yellow-400'>★</span>
							<span class='text-yellow-400'>★</span>
							<span class='text-yellow-400'>★</span>
							<span class='text-yellow-400'>★</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	// Subtle animations for benefit cards on hover
	document.addEventListener('DOMContentLoaded', () => {
		const benefitCards = document.querySelectorAll('.benefit-card');
		benefitCards.forEach((card) => {
			card.addEventListener('mouseenter', () => {
				const icon = card.querySelector('.benefit-icon');
				if (icon) {
					icon.classList.add('animate-wiggle');
					setTimeout(() => {
						icon.classList.remove('animate-wiggle');
					}, 500);
				}
			});
		});
	});

	// Scroll animations using Intersection Observer
	document.addEventListener('DOMContentLoaded', () => {
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add('fade-in-visible');
						observer.unobserve(entry.target);
					}
				});
			},
			{ threshold: 0.1 }
		);

		// Observe elements for fade-in
		document
			.querySelectorAll(
				'.benefit-card, .step-container, .special-offer-banner, .testimonial-container'
			)
			.forEach((el) => {
				el.classList.add('fade-in-element');
				observer.observe(el);
			});
	});
</script>
