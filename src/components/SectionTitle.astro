---
interface Props {
	tag?: 'h1' | 'h2' | 'h3';
	class?: string;
}

const { tag: Tag = 'h2', class: className = '' } = Astro.props;
---

<Tag
	class={`text-3xl md:text-4xl font-bold text-primary-dark relative pb-3 inline-block ${className}`}>
	<slot />
	<span
		class='absolute bottom-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-secondary rounded-full'
	></span>
</Tag>

<style>
	/* Optional animation for the underline */
	span {
		transition: width 0.3s ease-out;
	}

	h1:hover span,
	h2:hover span,
	h3:hover span {
		width: 60%;
	}
</style>
