---
import SocialMediaContent from './SocialMediaContent.astro';
import Button from './Button.astro';
import '../styles/Footer.css';

const currentYear = new Date().getFullYear();
const footerLinks = [
	{
		title: 'Navegación',
		links: [
			{ text: 'Inicio', url: '/' },
			{ text: 'Catálogo', url: '/catalogo' },
			{ text: 'Testimonios', url: '/testimonios' },
			{ text: 'Blog', url: '/blog' },
			{ text: 'Contacto', url: '/contacto' },
		],
	},
	{
		title: 'Categorías',
		links: [
			{ text: 'Inglés para Negocios', url: '/catalogo/negocios' },
			{ text: 'Inglés Profesional', url: '/catalogo/profesional' },
			{ text: 'Gramática & Vocabulario', url: '/catalogo/gramatica' },
			{ text: 'Certificaciones', url: '/catalogo/certificaciones' },
			{ text: 'Materiales Didácticos', url: '/catalogo/didacticos' },
		],
	},
	{
		title: 'Ayuda',
		links: [
			{ text: 'Preguntas Frecuentes', url: '/ayuda/faq' },
			{ text: 'Envíos y Entregas', url: '/ayuda/envios' },
			{ text: 'Formas de Pago', url: '/ayuda/pagos' },
			{ text: 'Devoluciones', url: '/ayuda/devoluciones' },
			{ text: 'Soporte', url: '/contacto' },
		],
	},
];
---

<footer class='bg-primary text-white pt-8 md:pt-12 pb-6 px-4 md:px-8'>
	<div class='container mx-auto px-4'>
		<!-- Top Section with Logo, Newsletter and Social Media -->
		<div
			class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-10 mb-6 md:mb-10'>
			<!-- Logo and Description -->
			<div class='flex flex-col'>
				<a
					href='/'
					class='text-2xl font-bold text-secondary mb-3 md:mb-4'
					>FluentReads</a
				>
				<p
					class='text-neutral-light mb-4 md:mb-6 max-w-md text-sm md:text-base'>
					Tu fuente confiable de libros en inglés y materiales
					educativos para profesionales y estudiantes que buscan
					dominar el idioma inglés.
				</p>
				<!-- Social Media Icons -->
				<div class='mt-2 md:mt-4'>
					<SocialMediaContent
						showFacebook={true}
						showInstagram={true}
						showTwitter={true}
						showWhatsApp={true}
						facebookUrl='#'
						instagramUrl='#'
						twitterUrl='#'
						whatsAppUrl='https://wa.me/1234567890'
						class='flex space-x-4 justify-center sm:justify-start'
						iconSize='h-6 w-6'
					/>
				</div>
			</div>

			<!-- Newsletter Signup -->
			<div class='lg:col-span-2 mt-2 md:mt-0'>
				<div class='bg-primary-dark p-4 md:p-8 rounded-lg shadow-inner'>
					<h3
						class='text-lg md:text-2xl font-semibold mb-2 md:mb-3 text-secondary'>
						¡Suscríbete a nuestro boletín!
					</h3>
					<p
						class='mb-4 md:mb-6 text-neutral-light text-sm md:text-base'>
						Recibe ofertas exclusivas, novedades editoriales y
						consejos para mejorar tu inglés.
					</p>
					<form class='flex flex-col sm:flex-row gap-3'>
						<input
							type='email'
							placeholder='Tu correo electrónico'
							class='flex-grow px-4 py-2 md:py-3 rounded-full text-white focus:outline-none focus:ring-2 focus:ring-secondary text-sm md:text-base bg-primary-light'
							required
						/>
						<Button
							variant='secondary'
							type='submit'
							size='small'
							class='whitespace-nowrap shadow-md hover:shadow-lg transform transition-all duration-300 md:size-medium'>
							Suscribirse
						</Button>
					</form>
					<p class='text-xs mt-2 md:mt-3 text-neutral-light'>
						Al suscribirte, aceptas nuestra <a
							href='/politica-privacidad'
							class='underline hover:text-secondary'
							>política de privacidad</a
						>.
					</p>
				</div>
			</div>
		</div>

		<!-- Middle Section with Links -->
		<div
			class='grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-4 md:gap-8 py-6 md:py-8 border-t border-b border-primary-light'>
			{
				footerLinks.map((section) => (
					<div class='mb-2 md:mb-0'>
						<h4 class='font-semibold text-base md:text-lg mb-2 md:mb-4 text-secondary'>
							{section.title}
						</h4>
						<ul class='space-y-1 md:space-y-2'>
							{section.links.map((link) => (
								<li>
									<a
										href={link.url}
										class='text-neutral-light hover:text-secondary transition-colors duration-200 inline-block py-1 text-sm md:text-base'>
										{link.text}
									</a>
								</li>
							))}
						</ul>
					</div>
				))
			}
		</div>

		<!-- Bottom Section with Copyright and Terms -->
		<div
			class='mt-6 md:mt-8 text-center text-xs md:text-sm text-neutral-light'>
			<div
				class='flex flex-wrap justify-center gap-3 md:gap-0 md:flex-row md:items-center md:space-x-4 mb-3 md:mb-4'>
				<a
					href='/terminos-condiciones'
					class='hover:text-secondary transition-colors'>
					Términos y Condiciones
				</a>
				<span class='hidden md:inline'>•</span>
				<a
					href='/politica-privacidad'
					class='hover:text-secondary transition-colors'>
					Política de Privacidad
				</a>
				<span class='hidden md:inline'>•</span>
				<a
					href='/cookies'
					class='hover:text-secondary transition-colors'>
					Política de Cookies
				</a>
			</div>
			<p>© {currentYear} FluentReads. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>
