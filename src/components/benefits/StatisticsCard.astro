---
import '../../styles/benefits/statisticsCard.css';
import StarIcon from '../icons/Star.astro';

// Stats for customer satisfaction section
const stats = {
	customers: '5,000+',
	books: '10,000+',
	satisfaction: '98%',
};
---

<div
	class='bg-primary text-white rounded-xl shadow-lg p-2 sm:p-4 stats-container transform transition-all duration-500 hover:shadow-xl'>
	<h3 class='text-lg sm:text-xl font-bold mb-2 sm:mb-4 flex items-center'>
		<span class='bg-white text-primary p-1 rounded-full mr-3 shine-effect'>
			<StarIcon class='h-5 w-5' />
		</span>
		Clientes satisfechos
	</h3>

	<!-- Statistics -->
	<div class='flex flex-col'>
		<!-- Stats Cards -->
		<div
			class='grid grid-cols-1 xs:grid-cols-3 lg:grid-cols-3 gap-3 sm:gap-4 mb-2'>
			<div
				class='stat-item bg-primary-dark/30 rounded-lg p-1 sm:p-2 transform transition-all duration-300 hover:scale-105 hover:bg-primary-dark/40'>
				<div class='text-center'>
					<div
						class='text-xl md:text-2xl font-bold text-secondary mb-1 sm:mb-2 counter-animation'>
						{stats.customers}
					</div>
					<div class='text-xs sm:text-sm text-white/90'>
						Clientes Satisfechos
					</div>
				</div>
			</div>

			<div
				class='stat-item bg-primary-dark/30 rounded-lg p-1 sm:p-2 transform transition-all duration-300 hover:scale-105 hover:bg-primary-dark/40'>
				<div class='text-center'>
					<div
						class='text-xl md:text-2xl font-bold text-secondary mb-1 sm:mb-2 counter-animation'>
						{stats.books}
					</div>
					<div class='text-xs sm:text-sm text-white/90'>
						Libros Vendidos
					</div>
				</div>
			</div>

			<div
				class='stat-item bg-primary-dark/30 rounded-lg p-1 sm:p-2 transform transition-all duration-300 hover:scale-105 hover:bg-primary-dark/40'>
				<div class='text-center'>
					<div
						class='text-xl md:text-2xl font-bold text-secondary mb-1 sm:mb-2 counter-animation'>
						{stats.satisfaction}
					</div>
					<div class='text-xs sm:text-sm text-white/90'>
						Satisfacción
					</div>
				</div>
			</div>
		</div>

		<!-- Trust Banner -->
		<div
			class='p-1 sm:p-2 bg-primary-dark/50 rounded-lg shadow-md transform transition-all duration-300 hover:shadow-lg hover:bg-primary-dark/60 trust-banner'>
			<p
				class='text-xs sm:text-sm md:text-base text-white/90 text-center pt-1'>
				Únete a miles de estudiantes y profesionales que confían en
				nosotros para su formación en inglés.
			</p>

			<div
				class='flex justify-center mt-2 sm:mt-3 space-x-1 sm:space-x-2 star-rating'>
				<span
					class='text-yellow-400 text-sm sm:text-base md:text-lg shine-effect'
					>★</span
				>
				<span
					class='text-yellow-400 text-sm sm:text-base md:text-lg shine-effect'
					>★</span
				>
				<span
					class='text-yellow-400 text-sm sm:text-base md:text-lg shine-effect'
					>★</span
				>
				<span
					class='text-yellow-400 text-sm sm:text-base md:text-lg shine-effect'
					>★</span
				>
				<span
					class='text-yellow-400 text-sm sm:text-base md:text-lg shine-effect'
					>★</span
				>
			</div>
		</div>
	</div>
</div>
