---
// import logoImage from '../assets/logo.svg';
import WhatsAppIcon from '../components/icons/WhatsApp.astro';
import SocialMediaButton from '../components/SocialMediaButton.astro';
import SocialMediaContent from '../components/SocialMediaContent.astro';
import MobileIcon from '../components/icons/Mobile.astro';
import Button from '../components/Button.astro';
---

<header class='bg-primary text-white shadow-md'>
	<div
		class='container mx-auto px-4 py-3 flex flex-wrap items-center justify-between'>
		<!-- Logo -->
		<a href='/' class='flex items-center'>
			<span class='text-2xl font-bold text-secondary'
				>English Books</span
			>
		</a>

		<!-- Mobile menu button -->
		<button
			id='mobile-menu-button'
			class='md:hidden flex items-center px-3 py-2'>
			<MobileIcon class='w-6 h-6' />
		</button>

		<!-- Navigation and social icons -->
		<div
			id='menu'
			class='mobile-menu md:flex flex-col md:flex-row w-full md:w-auto md:mt-0 max-h-0 md:max-h-none overflow-hidden opacity-0 md:opacity-100 transition-all duration-300 ease-in-out'>
			<nav class='flex flex-col md:flex-row md:items-center md:mr-6'>
				<a
					href='/'
					class='px-3 py-2 hover:text-secondary transition-colors'
					>Inicio</a
				>
				<a
					href='/catalogo'
					class='px-3 py-2 hover:text-secondary transition-colors'
					>Cat√°logo</a
				>
				<a
					href='/testimonios'
					class='px-3 py-2 hover:text-secondary transition-colors'
					>Testimonios</a
				>
				<a
					href='/blog'
					class='px-3 py-2 hover:text-secondary transition-colors'
					>Blog</a
				>
				<a
					href='/contacto'
					class='px-3 py-2 hover:text-secondary transition-colors'
					>Contacto</a
				>

				<!-- Offers button using the Button component -->
				<Button 
					variant="accent" 
					size="small" 
					href="/ofertas" 
					class="ml-2">
					Ver Ofertas
				</Button>
			</nav>

			<!-- Social Icons -->
			<div class='mt-4 md:mt-2'>
				<SocialMediaContent
					showFacebook={true}
					showInstagram={true}
					showTwitter={true}
					showWhatsApp={false}
					facebookUrl="#"
					instagramUrl="#"
					twitterUrl="#"
				/>
			</div>
		</div>
	</div>
</header>

<!-- Floating WhatsApp Button -->
<SocialMediaButton 
	network="WhatsApp" 
	href="https://wa.me/1234567890" 
	class="fixed bottom-10 right-8 bg-accent text-white p-3 rounded-full shadow-lg hover:bg-accent-dark transition-colors z-50"
>
	<WhatsAppIcon class='size-8' />
</SocialMediaButton>

<script>
	// Mobile menu toggle functionality with animations
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		const menu = document.getElementById('menu');

		// Function to open the menu with animation
		const openMenu = () => {
			menu?.classList.add('menu-open');
			menu?.classList.remove('max-h-0', 'opacity-0');
			menu?.classList.add('max-h-[500px]', 'opacity-100');
		};

		// Function to close the menu with animation
		const closeMenu = () => {
			menu?.classList.remove('menu-open');
			menu?.classList.remove('max-h-[500px]', 'opacity-100');
			menu?.classList.add('max-h-0', 'opacity-0');
		};

		// Toggle menu function
		const toggleMenu = () => {
			if (menu?.classList.contains('menu-open')) {
				closeMenu();
			} else {
				openMenu();
			}
		};

		mobileMenuButton?.addEventListener('click', toggleMenu);

		// Handle window resize to ensure menu works correctly when switching between mobile and desktop
		window.addEventListener('resize', () => {
			if (window.innerWidth >= 768) { // 768px is the md breakpoint in Tailwind
				menu?.classList.remove('max-h-0', 'opacity-0');
				menu?.classList.add('max-h-[500px]', 'opacity-100');
			} else if (!menu?.classList.contains('menu-open')) {
				menu?.classList.remove('max-h-[500px]', 'opacity-100');
				menu?.classList.add('max-h-0', 'opacity-0');
			}
		});
	});
</script>

<style>
	/* Additional styles for mobile menu animations */
	@media (max-width: 767px) {
		.mobile-menu {
			transform: translateY(-10px);
			transition: opacity 0.3s ease, max-height 0.3s ease, transform 0.3s ease;
		}
		
		.mobile-menu.menu-open {
			transform: translateY(0);
		}
	}
</style>
